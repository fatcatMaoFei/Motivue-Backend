FROM python:3.10-slim

WORKDIR /app

# Speed up pip
ENV PIP_NO_CACHE_DIR=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app

COPY requirements.txt .
RUN pip install --upgrade pip && pip install -r requirements.txt

COPY . .

EXPOSE 8000

CMD ["uvicorn", "weekly_report.api:app", "--host", "0.0.0.0", "--port", "8000"]

